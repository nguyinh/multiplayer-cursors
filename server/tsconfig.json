{
	"compilerOptions": {
		"target": "es2024",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"noEmit": true,
		"rootDir": ".",
		"baseUrl": ".",
		"types": ["vitest/globals"],
		"paths": {
			"@/services/*": ["./src/services/*"],
			"@/types": ["./src/types"],
			"@/entities": ["./src/entities"]
		}
	},
	"include": ["src"]
}
